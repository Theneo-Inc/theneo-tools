{
  "name": "@theneo/cli",
  "version": "0.0.0-development",
  "description": "Theneo cli",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Theneo-Inc/theneo-cli.git"
  },
  "license": "MIT",
  "author": {
    "name": "theneo",
    "url": "https://github.com/Theneo-Inc"
  },
  "engines": {
    "node": ">=16.0"
  },
  "keywords": [
    "theneo",
    "api",
    "documentation",
    "cli",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/Theneo-Inc/theneo-cli/issues"
  },
  "homepage": "https://github.com/Theneo-Inc/theneo-cli#readme",
  "files": [
    "!lib/__tests__/**/*",
    "lib/**/*",
    "bin/**/*"
  ],
  "bin": {
    "theneo": "./bin/index.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./lib/",
    "cm": "cz",
    "lint": "eslint ./src/  --fix",
    "start": "TS_NODE_FILES=true ts-node ./src/bin.ts",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "test:watch": "jest --watch",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "ci": "pnpm run build",
    "release": "pnpm run ci && changeset publish"
  },
  "dependencies": {
    "@clack/core": "^0.3.3",
    "@clack/prompts": "^0.7.0",
    "axios": "^1.5.0",
    "chalk": "^5.3.0",
    "cli-table": "^0.3.11",
    "commander": "^11.0.0",
    "config": "^3.3.9",
    "execa": "^8.0.1",
    "form-data": "^4.0.0",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.11",
    "js-yaml": "^4.1.0",
    "toml": "^3.0.0",
    "ts-results": "^3.3.0",
    "yaml-lint": "^1.7.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@ryansonshine/commitizen": "^4.2.8",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@types/cli-table": "^0.3.2",
    "@types/config": "^3.3.1",
    "@types/jest": "^29.5.5",
    "@types/js-yaml": "^4.0.6",
    "@types/node": "^18.17.17",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "semantic-release": "^22.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "type-fest": "^4.3.1",
    "typescript": "^5.2.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
